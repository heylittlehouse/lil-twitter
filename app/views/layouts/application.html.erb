<!DOCTYPE html>
<html>
<head>
  <title>TwitterDashboardApi</title>
  <%= stylesheet_link_tag  '//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css' %>
  <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lobster' => "all" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
 <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.js"></script>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <script type="text/x-handlebars-template" id="tweets-item">
    <h3>Tweets</h3>
    <ul>
    {{#each tweets}}
      <li class="tweet">
        <img class="avatar" src="{{avatar_url}}" alt="">
        <div class="tweet-content">
          <p>
            <span class="full-name">{{username}}</span>
            <span class="username">{{handle}}</span>
            <span class="timestamp">{{created_at}}</span>
          </p>
          <p>{{content}}</p>
        </div>
      </li>
    {{/each}}
    </ul>
  </script>

  <script type="text/x-handlebars-template" id="search-result">
    <h3>Search Results</h3>
    <ul>
    {{#each tweets}}
      <li class="tweet">
        <img class="avatar" src="{{avatar_url}}" alt="">
        <div class="tweet-content">
          <p>
            <span class="full-name">{{username}}</span>
            <span class="username">{{handle}}</span>
            <span class="timestamp">{{created_at}}</span>
          </p>
          <p>{{content}}</p>
        </div>
      </li>
    {{/each}}
    </ul>
  </script>

  <script type="text/x-handlebars-template" id="tenHashTags">
    <h3>Trends</h3>
    <ul>
      {{#each hashTags}}
      <li><a href="{{this}}" style="color:black;">{{this}}</a></li>{{!. also works}}
      {{/each}}
    </ul>
  </script>

  <script type="text/x-handlebars-template" id="new-tweet">
    <li class="tweet">
      <img class="avatar" src="{{tweet.avatar_url}}" alt="">
      <div class="tweet-content">
        <p>
          <span class="full-name">{{tweet.username}}</span>
          <span class="username">{{tweet.handle}}</span>
          <span class="timestamp">{{tweet.created_at}}</span>
        </p>
        <p>{{tweet.content}}</p>
      </div>
    </li>
  </script>
  <%= yield %>

</body>
</html>
